extends layout

block content

  form.form-container(method="POST")
    h1.form-title Create a New Post
    .form-group
        label.form-label(for='title') Title:
        input.form-input(type='text' id='title' name='title' required)

    .form-group
        label.form-label(for='text') Content:
        textarea.form-input(name='text' id='text' rows='5' required)

    .form-group
        button.form-button(type='submit') Create Post