extends layout

block content
  form.signup-form(action="/signup" method="POST")
      h1.signup-form__title Sign Up
      if errors
        p= {errors}
      
      .signup-form__field
        label.signup-form__label(for="firstName") First Name: 
        if firstName
          span= {firstName}
        input.signup-form__input(type="text" id="firstName" name="firstName" required)
      
      .signup-form__field
        label.signup-form__label(for="lastName") Last Name:
        if lastName
          span= {lastName}
        input.signup-form__input(type="text" id="lastName" name="lastName" required)
      
      .signup-form__field
        label.signup-form__label(for="username") Username:
        if username
          span= {username}
        input.signup-form__input(type="text" id="username" name="username" required)
      
      .signup-form__field
        label.signup-form__label(for="password") Password:
        input.signup-form__input(type="password" id="password" name="password" required)
      
      
      button.signup-form__button(type="submit") Sign Up