extends layout

block content
  h1.posts-title Posts

  if post_list && post_list.length
    div.post-container
      each post in post_list
        div.post
          h2.post-title= post.title
          p.post-text= post.text
          if isAuthenticated
            if post.author
              p.post-author Author: #{post.author.last_name} #{post.author.first_name}
            else
              p.post-author Author: Unknown
  else
    p No posts to display.

  if isAuthenticated
    div.instruction
      a(href="/create-post").instruction-link Create a new post
  else
    div.instruction 
      a(href="/signin").instruction-link Sign in
      |  to create a new post and view the authors of posts